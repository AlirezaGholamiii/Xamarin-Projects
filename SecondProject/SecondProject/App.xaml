<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecondProject.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="myfavColor">#ffcc22</Color>
            <Color x:Key="myfavColor2">#ffcc</Color>
            <Color x:Key="myColor3">#111111</Color>
            
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource myfavColor2}"/>
                <Setter Property="TextColor" Value="{StaticResource myColor3}"/>
            </Style>

            <!--Apply just for buttons with static type defaultButton-->
            <Style x:Key="defaultButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Gray"/>
                <Setter Property="TextColor" Value="HotPink"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>